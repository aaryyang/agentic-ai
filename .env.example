# AI Agent CRM System - Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# CORE AI CONFIGURATION
# =============================================================================

# Groq API Configuration (Required)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# Agent Configuration
DEFAULT_AGENT_TEMPERATURE=0.7
MAX_TOKENS=2000
LOG_LEVEL=INFO

# =============================================================================
# EXTERNAL PLATFORM INTEGRATIONS (Optional)
# =============================================================================

# WhatsApp Business API
WHATSAPP_API_TOKEN=your_whatsapp_token_here
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security (Production)
SECRET_KEY=your_secret_key_for_production
CORS_ORIGINS=*

# Database (Future use)
# DATABASE_URL=sqlite:///./agent_crm.db

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEBUG=true
DEVELOPMENT_MODE=true

# Logging
LOG_FORMAT=json
LOG_TO_FILE=false
